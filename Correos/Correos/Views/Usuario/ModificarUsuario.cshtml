@using Correos.Models
@model Usuario
@{
    ViewData["Title"] = "Modificar";
}

@{
    var sucursales = (List<string>)ViewData["sucursales"];
    var usuarioctual = (Usuario)ViewData["usuario"];
}

<h4>Modificar</h4>
<hr />
@if(usuarioctual != null) {



    <form class="col-lg-12">
        <div class="col-md-11 offset-md-1">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Rut, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => usuarioctual.Rut, new { @class = "form-control", placeholder = "", Style = "max-width:100%;", disabled = "disabled" })

                    @Html.ValidationMessageFor(m => m.Rut, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Nombre, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => usuarioctual.Nombre, new { @class = "form-control", placeholder = "", Style = "max-width:100%;" })

                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Sexo, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => usuarioctual.Sexo, new { @class = "form-control", placeholder = "", Style = "max-width:100%;" })

                    @Html.ValidationMessageFor(m => usuarioctual.Sexo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Domicilio, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => usuarioctual.Domicilio, new { @class = "form-control", placeholder = "", Style = "max-width:100%;" })

                    @Html.ValidationMessageFor(m => usuarioctual.Domicilio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Fecha, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => usuarioctual.Fecha, new { @class = "form-control", placeholder = "", Style = "max-width:100%;" })

                    @Html.ValidationMessageFor(m => m.Fecha, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Fono, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => usuarioctual.Fono, new { @class = "form-control", placeholder = "", Style = "max-width:100%;" })

                    @Html.ValidationMessageFor(m => usuarioctual.Fono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Previ, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => usuarioctual.Previ, new { @class = "form-control", placeholder = "", Style = "max-width:100%;" })

                    @Html.ValidationMessageFor(m => usuarioctual.Previ, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label for="sel1">Selecciona una sucursal.</label>
                    <select class="form-control" id="sele">
                        @{
                            if(sucursales == null) {
                                <option>Nada</option>

                            } else {
                                foreach(var x in sucursales) {
                                    <option>@x</option>
                                }
                            }

                        }
                    </select>
                </div>

            </div>

            <div class="form-group">
                <div class=" col-md-10">
                    <br />
                    <input id="Guardar" value="Guardar" class="btn btn-primary" />
                    <br />
                </div>
                <a class="text-danger">@ViewBag.Message</a>
            </div>

        </div>
    </form>

    @section Scripts {
        <script src="~/js/ModificarCajero.js"></script>
    }
} else {
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1>No hay usuarios</h1>
        </div>
    </div>
}